    <style name="ThemeOverlay.BrainBrakers.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/Widget.BrainBrakers.AlertDialog</item>
        <item name="buttonBarButtonStyle">@style/Widget.BrainBrakers.Dialog.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.BrainBrakers.Dialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.BrainBrakers.Dialog.Button</item>
    </style>

    <style name="Widget.BrainBrakers.AlertDialog" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.AlertDialog</item>
    </style>

    <style name="ShapeAppearanceOverlay.AlertDialog" parent="">
        <item name="cornerSize">@dimen/radius_corner_items</item>
        <item name="cornerFamily">rounded</item>
    </style>


    <style name="ThemeOverlay.BrainBrakers.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.BrainBrakers.BottomSheetDialog</item>
    </style>

    <style name="Widget.BrainBrakers.BottomSheetDialog" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.BottomSheet</item>
    </style>

    <style name="ShapeAppearanceOverlay.BottomSheet" parent="">
        <item name="cornerSize">@dimen/radius_corner_items</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="MaterialAlertDialog.BrainBrakers.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.BrainBrakers.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="shapeAppearance">@style/ShapeAppearance.BrainBrakers.SmallComponent</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:padding">@dimen/base_margin</item>
    </style>

    <style name="Widget.BrainBrakers.Dialog.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="shapeAppearance">@style/ShapeAppearance.BrainBrakers.SmallComponent</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="Widget.BrainBrakers.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="shapeAppearance">@style/ShapeAppearance.BrainBrakers.SmallComponent</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="ShapeAppearance.BrainBrakers.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ShapeAppearance.BrainBrakers.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
