<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/notification_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/light_cyan"
    android:padding="@dimen/base_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/notification_play"
        android:layout_width="@dimen/notification_icons_size"
        android:layout_height="@dimen/notification_icons_size"
        android:src="@drawable/ic_play_button_svgrepo_com"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/notification_pause"
        android:layout_width="@dimen/notification_icons_size"
        android:layout_height="@dimen/notification_icons_size"
        android:src="@drawable/ic_pause_button"
        android:layout_marginRight="20dp"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/notification_stop"
        android:layout_width="@dimen/notification_icons_size"
        android:layout_height="@dimen/notification_icons_size"
        android:src="@drawable/ic_add_podcast_icon"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/notification_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="italic"/>
    </LinearLayout>
</LinearLayout>